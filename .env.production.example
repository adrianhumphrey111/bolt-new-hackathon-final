# Production Environment Variables (Startup)
# This configuration is for the live startup product

# App Configuration
NEXT_PUBLIC_APP_NAME="Your Startup Name"
NEXT_PUBLIC_ENVIRONMENT=production

# Supabase Configuration (Production Instance)
NEXT_PUBLIC_SUPABASE_URL=your-production-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# AWS Configuration (Production Resources)
AWS_ACCESS_KEY_ID=your-production-access-key
AWS_SECRET_ACCESS_KEY=your-production-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=production-your-startup-name

# Stripe Configuration (Live Mode)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_live_your-key
STRIPE_SECRET_KEY=sk_live_your-key
STRIPE_WEBHOOK_SECRET=whsec_production

# Feature Flags (All Features Enabled)
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_USER_LIMIT=0

# API Configuration
NEXT_PUBLIC_API_URL=https://api.your-startup-domain.com
OPENAI_API_KEY=your-production-openai-key

# Analytics and Monitoring
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-key
EMAIL_FROM=noreply@your-startup-domain.com

# Deployment
DEPLOYMENT_URL=https://www.your-startup-domain.com

# Security
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true
RATE_LIMIT_PER_MINUTE=60
CRON_SECRET=your-secure-cron-secret

# Remotion Lambda (Production)
REMOTION_AWS_ACCESS_KEY_ID=your-remotion-access-key
REMOTION_AWS_SECRET_ACCESS_KEY=your-remotion-secret-key
REMOTION_LAMBDA_FUNCTION_NAME=production-remotion-render
REMOTION_S3_BUCKET_NAME=production-remotion-renders